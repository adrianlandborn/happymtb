<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">
    
	<TextView		 	
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:textSize="15sp"
	    android:textStyle="bold"
	    android:textColor="@color/title_1_text"
	    android:text="Text att sÃ¶ka efter"/>	
		        
    <EditText
        android:id="@+id/kos_dialog_search_text"
        android:inputType="text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

	<TextView		 	
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:textSize="15sp"
	    android:textStyle="bold"
	    android:textColor="@color/title_1_text"
	    android:text="Kategori"/>	
    
    <Spinner 
        android:id="@+id/kos_dialog_search_category"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
        android:entries="@array/kos_dialog_search_category_name"
    />

    <TextView		 	
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:textSize="15sp"
	    android:textStyle="bold"
	    android:textColor="@color/title_1_text"
	    android:text="Region"/>	
    
    <Spinner 
        android:id="@+id/kos_dialog_search_region"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
        android:entries="@array/kos_dialog_search_region_name"
    />
    
	<TextView		 	
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:textSize="15sp"
	    android:textStyle="bold"
	    android:textColor="@color/title_1_text"
	    android:text="Typ"/>	
    
    <Spinner 
        android:id="@+id/kos_dialog_search_type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
        android:entries="@array/kos_dialog_search_type"
    />    
</LinearLayout>