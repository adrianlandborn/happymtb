<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@color/white">
	
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:id="@+id/settingsframe"
    	android:layout_width="fill_parent"
    	android:layout_height="0dip"/>	
    
	<TextView		 	
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:textSize="13dip" 
	    android:textColor="@color/title_1_text"
	   	android:textStyle="bold"
	    android:text="Användarnamn"	   
	/>	    
	
	<EditText 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/Settings_Username"
    />	
    
	<TextView		 	
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:textSize="13dip" 
	    android:textColor="@color/title_1_text"
	   	android:textStyle="bold"
	    android:text="Lösenord"	   
	/>	    	
	
	<EditText 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:password="true"
	    android:id="@+id/Settings_Password"
    />	

	<TextView		 	
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:textSize="13dip" 
	    android:textColor="@color/title_1_text"
	   	android:textStyle="bold"
	    android:text="Textstorlek"	   
	/>	    		
	
    <Spinner 
        android:id="@+id/Settings_TextSize"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
        android:entries="@array/settings_textsize"
    />

	<TextView		 	
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:textSize="13dip" 
	    android:textColor="@color/title_1_text"
	   	android:textStyle="bold"
	    android:text="Starta med denna sidan"	   
	/>	    		
        
    <Spinner 
        android:id="@+id/Settings_StartPage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
        android:entries="@array/settings_startpage"
    />    
      
	<Button 
    	android:id="@+id/Settings_Save"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text="Spara"
    	android:onClick="SaveSettings"    	
    />
</LinearLayout>	