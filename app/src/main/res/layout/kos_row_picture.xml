<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/kos_picture_row"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey"
    android:orientation="vertical">

    <LinearLayout style="@style/RowBase">

        <LinearLayout
            android:id="@+id/kos_picture_row_color"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rowshape_green"
            android:orientation="vertical"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/kos_picture_row_image"
                    android:layout_width="100dip"
                    android:layout_height="80dip"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:background="@color/grey"
                    android:src="@drawable/no_photo" />

                <TextView
                    android:id="@+id/kos_picture_row_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/kos_picture_row_image"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/title_1_text"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/kos_picture_row_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/kos_picture_row_title"
                    android:layout_alignLeft="@id/kos_picture_row_title"
                    android:textColor="@color/title_2_text"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/kos_picture_row_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/kos_picture_row_time"
                    android:layout_alignLeft="@id/kos_picture_row_title"
                    android:textColor="@color/black"
                    android:textSize="13sp" />


                <TextView
                    android:id="@+id/kos_picture_row_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/kos_picture_row_area"
                    android:layout_alignLeft="@id/kos_picture_row_title"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/kos_picture_row_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/kos_picture_row_category"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold"/>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>	