<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/kos_row"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/rowshape_kos"
        android:orientation="vertical"
        android:paddingBottom="1dp">

        <LinearLayout
            android:id="@+id/kos_row_color"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rowshape_green"
            android:orientation="vertical"
            android:padding="15dp"
            android:textStyle="bold">

            <TextView
                android:id="@+id/kos_row_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/title_1_text"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/kos_row_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/title_2_text"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/kos_row_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/kos_row_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/kos_row_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="13sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>