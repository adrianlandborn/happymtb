<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/thread_row"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:orientation="horizontal"	    
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
		>
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_marginRight="10dp"
			android:layout_weight="1"
			>		
			<TextView
				android:id="@+id/thread_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="15sp"
				android:textColor="@color/title_1_text"/>
								
			<TextView
				android:id="@+id/thread_footer"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="13sp"
				android:text=""
				android:textColor="@color/title_2_text"/>
					
			<LinearLayout 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				>	 
				<TextView
					android:id="@+id/thread_page"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="13sp"
					android:text="Sida:"
					android:textColor="@color/title_2_text"
					android:visibility="gone"
					/>
				<TextView
		        	android:id="@+id/thread_page_button_1"
					android:text="1"
					style="@style/ForumPageLink" />
				<TextView
		        	android:id="@+id/thread_page_button_2"
					android:text="2"
					style="@style/ForumPageLink" />
				<TextView
		        	android:id="@+id/thread_page_button_3"
					android:text="3"
					style="@style/ForumPageLink" />
				<TextView
		        	android:id="@+id/thread_page_button_4"
					android:text="4"
					style="@style/ForumPageLink" />
			</LinearLayout>
		</LinearLayout>
		<TextView
	     	android:id="@+id/thread_new"
   			android:layout_width="30dp"
   			android:layout_height="match_parent"
			android:gravity="center"
  			android:textSize="13sp"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:textStyle="bold"
			android:text="@string/thread_new"
			android:textAllCaps="true"
			android:textColor="@color/colorAccent"
			android:visibility="gone"
     		/>
	</LinearLayout>
</LinearLayout>