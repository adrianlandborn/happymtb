<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/kos_row"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@color/grey"
	>

	<LinearLayout 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"	    
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="3dp"
        android:paddingBottom="1dp"
        android:background="@drawable/rowshapekos"
		>   
		
		<LinearLayout 
		    android:id="@+id/kos_row_color"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:padding="15dp"	    
			android:textStyle="bold"
	        android:background="@drawable/rowshapegreen"
			>   	    
		    
			<TextView		 	
			    android:id="@+id/kos_row_title"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textSize="13dip" 
			    android:textColor="@color/title_1_text"
			   	android:textStyle="bold"
			    android:text=""	   
		   	/>		   
		
			<TextView		 	
			    android:id="@+id/kos_row_time"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:textSize="11dip" 
		    	android:textColor="@color/title_2_text"		    
		   		android:text=""	 	
	 		/>			
		
			<TextView		 	
			    android:id="@+id/kos_row_area"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textSize="11dip" 
			    android:textColor="@color/black"
			    android:text=""	         	     	    	    		    	    	   
		   	/>

			<TextView		 	
			    android:id="@+id/kos_row_category"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textSize="11dip" 
			    android:textColor="@color/black"
			    android:text=""	         	     	    	    		    	    	   
		   	/>				
		
			<TextView		 	
			    android:id="@+id/kos_row_price"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textSize="11dip" 
			    android:textColor="@color/black"
		    	android:text=""	 				    										    	         	     	    	    		    	    	  
		   	/>			
				
		</LinearLayout>	
	</LinearLayout>
